{
  "name": "react-statement-blocks",
  "version": "0.3.1",
  "type": "module",
  "license": "MIT",
  "description": "declarative conditional rendering components for React applications",
  "author": {
    "name": "Néstor Álvarez-Díaz",
    "email": "naddiaz.92@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nalvarezdiaz/react-statement-blocks"
  },
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "vitest run && npm run build"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./collections": {
      "types": "./dist/collections.d.ts",
      "import": "./dist/collections.js"
    },
    "./conditional": {
      "types": "./dist/conditional.d.ts",
      "import": "./dist/conditional.js"
    },
    "./collections/for": {
      "types": "./dist/collections/for.d.ts",
      "import": "./dist/collections/for.js"
    },
    "./conditional/ifelse": {
      "types": "./dist/conditional/ifelse.d.ts",
      "import": "./dist/conditional/ifelse.js"
    },
    "./conditional/switch": {
      "types": "./dist/conditional/switch.d.ts",
      "import": "./dist/conditional/switch.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "22.13.8",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-dom": "^1.49.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-x": "^1.49.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "16.0.0",
    "jsdom": "26.0.0",
    "prettier": "^3.6.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.35.0",
    "vite": "7.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.2.0"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}